{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "module": "reduced_3dgs.train",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-s",
                "data/truck",
                "-d",
                "output/truck-reduced",
                "-i",
                "30000",
                "--mode",
                "densify-pruning-shculling",
                "--with_scale_reg",
                "-odensify_grad_threshold=0.0001",
                "--empty_cache_every_step",
            ]
        },
        {
            "name": "train-camera",
            "type": "debugpy",
            "request": "launch",
            "module": "reduced_3dgs.train",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-s",
                "data/truck",
                "-d",
                "output/truck-reduced-camera",
                "-i",
                "30000",
                "--mode",
                "camera-densify-pruning-shculling",
                // "camera-pruning-shculling",
                "--with_scale_reg",
                "-odensify_grad_threshold=0.0001",
                "--empty_cache_every_step",
                "-oscale_reg_thr_scale=1.0", // scale_reg_thr_scale < densify_percent_too_big cause bad quality
                "-odepth_l1_weight_init=1.0",
                "-odepth_l1_weight_final=1.0",
                "-odepth_from_iter=500",
                "-odepth_local_relative_kernel_radius=32",
                "-odepth_local_relative_stride=16",
                "-odepth_resize=577",
            ]
        },
        {
            "name": "train-quantize",
            "type": "debugpy",
            "request": "launch",
            "module": "reduced_3dgs.train",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-s",
                "data/truck",
                "-d",
                "output/truck-quantize-reduced",
                "-i",
                "30000",
                "--mode",
                "densify-pruning-shculling",
                "--with_scale_reg",
                "-odensify_grad_threshold=0.0001",
                "--empty_cache_every_step",
                "--quantize",
                "-onum_clusters_scaling=1024",
                "-onum_clusters_rotation_re=256",
                "-onum_clusters_rotation_im=1024",
                "-onum_clusters_opacity=256",
                "-onum_clusters_features_dc=512",
                "-onum_clusters_features_rest=[256]",
            ]
        },
        {
            "name": "quantize",
            "type": "debugpy",
            "request": "launch",
            "module": "reduced_3dgs.quantize",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-s",
                "output/truck-quantize-reduced",
                "-d",
                "output/truck-quantized",
                "-i",
                "30000",
                "--num_clusters_scaling=1024",
                "--num_clusters_rotation_re=256",
                "--num_clusters_rotation_im=1024",
                "--num_clusters_opacity=256",
                "--num_clusters_features_dc=512",
                "--num_clusters_features_rest",
                "256",
                "128",
                "64"
            ]
        },
    ]
}